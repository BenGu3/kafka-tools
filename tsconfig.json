{
  "compilerOptions": {
    "lib": ["dom", "scripthost", "es2021"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./build/"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
