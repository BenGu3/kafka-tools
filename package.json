{
  "name": "kafka-tools",
  "version": "1.0.0",
  "main": "./build/cli.js",
  "bin": {
    "kafka-tools": "./build/cli.js"
  },
  "repository": "git@github.com:BenGu3/kafka-tools.git",
  "author": "Ben Guthrie <benjee.012@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:clean && yarn build:compile",
    "build:clean": "rm -rf ./build",
    "build:compile": "tsc -sourcemap --pretty -p tsconfig.json",
    "build:dev": "yarn build && npm unlink -g kafka-tools && npm link",
    "precommit": "yarn build && yarn test",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest"
  },
  "dependencies": {
    "inquirer": "8.2.0",
    "inquirer-autocomplete-prompt": "1.4.0",
    "kafkajs": "1.15.0",
    "yargs": "17.3.0"
  },
  "devDependencies": {
    "@types/inquirer": "8.1.3",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.1",
    "@types/yargs": "17.0.7",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  }
}
