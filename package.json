{
  "name": "@bengu3/kafka-tools",
  "version": "1.0.0",
  "main": "./build/cli.js",
  "bin": {
    "kafka-tools": "./build/cli.js"
  },
  "repository": "git@github.com:BenGu3/kafka-tools.git",
  "author": "Ben Guthrie <benjee.012@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:clean && yarn build:compile",
    "build:clean": "rm -rf ./build",
    "build:compile": "tsc -sourcemap --pretty -p tsconfig.json",
    "build:dev": "yarn build && npm unlink -g kafka-tools && npm link",
    "lint:modified": "lint-staged",
    "lint:all": "eslint ./src/** --ext .ts",
    "precommit": "yarn build && yarn lint:modified && yarn test",
    "prepare": "husky install",
    "publish:npm": "semantic-release --no-ci",
    "release": "yarn release:clean && yarn release:create && yarn release:bundle",
    "release:clean": "rm -rf ./release",
    "release:create": "pkg package.json",
    "release:bundle": "cd release && tar -czf kafka-tools.tar.gz kafka-tools",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "fuzzy": "0.1.3",
    "inquirer": "8.2.0",
    "inquirer-autocomplete-prompt": "1.4.0",
    "inquirer-date-prompt": "2.0.1",
    "kafkajs": "1.16.0-beta.30",
    "lodash": "4.17.21",
    "table": "6.7.5",
    "winston": "3.3.3",
    "yargs": "17.3.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/inquirer": "8.1.3",
    "@types/jest": "27.0.3",
    "@types/jest-when": "2.7.3",
    "@types/lodash": "4.14.178",
    "@types/node": "17.0.1",
    "@types/table": "6.3.2",
    "@types/yargs": "17.0.7",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "jest-when": "3.5.0",
    "lint-staged": "12.1.4",
    "pkg": "5.5.1",
    "semantic-release": "18.0.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "pkg": {
    "outputPath": "release",
    "scripts": "build/**/*.js",
    "targets": [
      "node16-macos-x64"
    ]
  }
}
